{
  "name": "vichaarlab-crm-app",
  "author":"Dinakrushna Agasti",
  "private": true,
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3006",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite --host 0.0.0.0 --port 3006",
    "electron": "electron .",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "dist": "npm run build && electron-builder",
    "preview:prod": "vite preview --host 0.0.0.0 --port 3006"
  },
  "build": {
    "appId": "com.example.POS",
    "productName": "VichaarLab CRM",
    "icon": "public/icon.ico",
    "asar": true,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main.js",
      "electron-main.js",
      "dist/**/*",
      "!CRM_Lite_backend.exe"
    ],
    "extraResources": [
      {
        "from": "CRM_Lite_backend.exe",
        "to": "CRM_Lite_backend.exe"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "uninstallDisplayName": "VichaarLab-CRM",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icon.icns"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mdi/font": "^7.4.47",
    "@mui/icons-material": "^5.16.7",
    "@mui/material": "^5.16.7",
    "@mui/x-charts": "^7.12.1",
    "@mui/x-date-pickers": "^7.27.3",
    "@reduxjs/toolkit": "^2.3.0",
    "@tanstack/react-query": "^5.45.1",
    "@tanstack/react-query-devtools": "^5.45.1",
    "@vitejs/plugin-react": "^4.3.4",
    "apexcharts": "^4.3.0",
    "axios": "^1.7.4",
    "bootstrap": "^5.3.3",
    "chart.js": "^4.4.8",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "emoji-picker-react": "^4.12.0",
    "eventemitter3": "^5.0.1",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.10.2",
    "lucide-react": "^0.474.0",
    "react": "^18.3.1",
    "react-apexcharts": "^1.7.0",
    "react-bootstrap": "^2.10.9",
    "react-calendar": "^5.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-circular-progressbar": "^2.2.0",
    "react-dom": "^18.3.1",
    "react-flow-renderer": "^10.3.17",
    "react-hook-form": "^7.52.0",
    "react-hot-toast": "^2.4.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.26.2",
    "react-select": "^5.10.1",
    "react-toastify": "^10.0.6",
    "recharts": "^2.15.1",
    "redux-persist": "^6.0.0",
    "sweetalert2": "^11.15.10",
    "vite": "^6.2.2",
    "web-vitals": "^2.1.4",
    "xlsx": "^0.18.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.3"
  }
}
